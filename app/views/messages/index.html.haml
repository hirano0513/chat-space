.contents
  = render 'shared/left-contents'
  .right-contents
    .right-contents-header
      .current-group
        %h2.current-group__name
          = @group.name
        %ul.current-group__members Member :
        - @group.users.each do |user|
          %li.current-group__member
            = user.name
      = link_to edit_group_path(@group) do
        .right-contents-header__btn Edit
    .messages{'data-group_id': "#{@group.id}"}
      = render @messages
    .form
      = form_for [@group, @message] do |f|
        .text-box
          = f.text_field :content, placeholder: "type a message", class: 'text-box__input'
          %label.fa.fa-image.image-label
            = f.file_field :image, class: 'image-label__input'
            = f.submit "Send", name: 'commit', class: 'text-box__submit-btn'

